<body>
  <button class="bag" onclick="cartQuantity += 1; document.querySelector('#cart-summary').
  innerText = `Your Bag has ${cartQuantity} items`;">Add to Bag</button>

  <button class="wish"  onclick="cartQuantity -=1; document.querySelector('#cart-summary').
  innerText = `Your Bag has ${cartQuantity} items`;" >Move to Wishlist</button>

  <button class="item"  onclick="cartQuantity += 2; document.querySelector('#cart-summary').
  innerText = `Your Bag has ${cartQuantity} items`;">Add 1+1 sale item</button>

  <h1 id="cart-summary"></h1>

  <script>
    let cartQuantity = 0;
    document.querySelector('#cart-summary').innerText = `Your Bag has ${cartQuantity} items`;
  </script>

